{#                {% endfor %}#}
            </div>
        </div>
    {% endif %}


    {% else %}

        {% for analiz_d in analiz %}

            <div class="container">
                <div class="row">
                    <div class="col">
                        <img style="width: 310px; height: 150px;" src="{{ analiz_d.1 }}">
                    </div>
                    <div class="col">
                        <div class="row">
                            <h5>Автомобиль {{ analiz_d.0 }}</h5>
                            <h5>Подходит Вам с вероятностью: {{ analiz_d.2 }}%</h5>
                        </div>
                        <br>
                        <div class="row">
                            <a class="btn btn-primary">Заявка на аренду автомобиля</a>
                        </div>
                    </div>
                </div>
            </div>
            <br>

        {% endfor %}

    {% endif %}














